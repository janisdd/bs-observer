$rightMargin = 1em

$accentColor = #2196F3
$aboutNotImportantColor = #909090

$errorColor = #dd514c
$warningColor = #fad232
$greenColor = #5eb95e
$orangeColor = #f37b1d
$blueColor = #1f8dd6
$purpleColor = #8058a5
$white = white

.white-colored {
  color white
}

.not-important-colored {
  color $aboutNotImportantColor
}

.not-important-bg-colored {
  background-color $aboutNotImportantColor
}

.light-grey-bg-colored {
  background-color #e9e9e9
}

.grey-colored {
  color lightgrey
}

.fg-colored {
  color black !important
}

.error-colored {
  color $errorColor
}

.error-colored-i {
  color $errorColor !important
}

.error-bg-colored {
  background-color $errorColor !important
}

/**
this is yellowish because warning like on the console (exclamation mark)
 */
.warning-colored {
  color $warningColor
}

.blue-colored {
  color $blueColor
}

.diff-blue-colored {
  color #27a3f5
}

.orange-colored {
  color $orangeColor
}

.ok-colored {
  color $greenColor
}

.white-colored {
  color white !important
}

.ok-bg-colored {
  background-color $greenColor !important
}

.accent-colored {
  color $accentColor

  > i {
    color $accentColor
  }
}

.list-item-padding {
  padding 0.42857143em 0 0.42857143em 0
}

.link-colored {
  color #4183C4
}

.link-colored:hover {
  color #1e70bf
  text-decoration none
}

select {
  background-color white
}

.site-user-menu {
  z-index 10003 !important //.logger-panel has 100002 and would hide the menu (semantic ui spinner has 10000)
}

.not-text-wrapping {
  white-space nowrap
  word-break break-all
}

.too-much-text-hidden {
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  word-break break-all
}

.v-centered {
  margin-top auto
  margin-bottom auto
}

.v-centered-i {
  margin-top auto !important
  margin-bottom auto !important
}

.flex-stretch {
  flex 1 1 auto
}

.cursor-pointer {
  cursor pointer
}

html, body {
  height 100%
}

.related-links {

  display flex
  font-size 1.1em

  > div {
    margin-right 1em
  }

  > a {
    margin-right 1em
  }
}

.flexed {
  display flex
  flex-direction row
  flex-flow wrap
}

.flexed-well-spaced {
  display flex
  flex-direction row
  flex-flow nowrap
  justify-content space-evenly
}

.flex-left-right {
  display flex
  flex-direction row
  flex-flow nowrap
  justify-content space-between
}

.flexed-no-wrap {
  display flex
  flex-direction row
  flex-flow nowrap
}

.flexed-h {
  display flex
  flex-direction column
  flex-flow column
}

.flexed-i {
  display flex !important
  flex-direction row !important
  flex-flow wrap !important
}

.two-flexed-stretch-left {
  display flex
  > div:nth-child(1) {
    //display flex
    flex 1 1 auto
  }
  > div:nth-child(2) {
    //display flex
    flex 0 0 auto
  }
}

.two-flexed-stretch-right {
  display flex
  div:nth-child(1) {
    //display flex
    flex 0 0 auto
  }
  div:nth-child(2) {
    //display flex
    flex 1 1 auto
  }
}

.div-disabled {
  opacity 0.2 !important
  pointer-events none
}

.events-disabled {
  pointer-events none
}

.hidden-overflow-i {
  overflow hidden !important
}

.fh {
  height 100%
}

.fw {
  width 100%
}

.mar-null {
  margin 0 !important
}

.mar-right {
  margin-right $rightMargin !important
}

.mar-right-2x {
  margin-right ($rightMargin * 2) !important
}

.mar-left {
  margin-left $rightMargin !important
}

.mar-left-half {
  margin-left ($rightMargin / 2) !important
}

.mar-left-neg {
  margin-left -($rightMargin) !important
}

.mar-right-half {
  margin-right ($rightMargin/ 2) !important
}

.mar-bot {
  margin-bottom $rightMargin !important
}

.mar-bot-half {
  margin-bottom ($rightMargin/ 2) !important
}

.pad-right {
  padding-right $rightMargin !important
}

.pad-left-right {
  padding-right $rightMargin !important
  padding-left $rightMargin !important
}

.pad-left-right-half {
  padding-right ($rightMargin / 2) !important
  padding-left ($rightMargin / 2) !important
}

.pad {
  padding-right $rightMargin !important
  padding-left $rightMargin !important
  padding-top $rightMargin !important
  padding-bottom $rightMargin !important
}

.collapsed {
  display none
}

.default-cursor {
  cursor auto !important
}

.inline {
  display inline-block
}

/* override semantic ui divider ... because we don't need text
 */
.ui.vertical.divider:before, .ui.vertical.divider:after {
  height: 100% !important
}

// color picker fixes
.react-color-picker input {
  padding 1px !important
}

.popup .chrome-picker {
  box-shadow none !important
  margin -1em -1em -0.8em -1em
}

.indicator {
  background-color alpha($accentColor, 0.1)
}

.vertical-stacked-buttons {

  .button {
    margin-bottom 0.25em
  }

}

.series-img {
  width 180px !important
  height auto !important
}

.series-list {
  padding 2em
  display flex
  flex-wrap wrap
  flex-direction row

  .list-element {
    margin-bottom 1em
    margin-right 1em
    min-width 400px
  }
}

.badge.is-badge-small[data-badge]::after {
  left calc(100% + 5px)
}

.top-right-box-button {
  position absolute
  top 0
  right 0
}

.top-left-box-button {
  position absolute
  top 0
  left 0
}

.series-marker {
  margin-right 1em
}

.ignore-series {
  margin-right 2em
}

.input-area {
  padding 2em 2em 0 2em
}

.sticky-pos {
  position sticky
  position -webkit-sticky
  top 0
  z-index 4 //else imgs are in front
}

.series-title-and-seasons {
  background-color white
  margin-bottom 0.5em
  z-index 2 //checkbox has 1
}

.flat-box {
  padding 0
  //box-shadow none
  //border 1px solid #d6d6d6
  overflow hidden
}

.icon-margin {
  margin-right 0.3em
}

.message {
  background-color transparent !important
}

.seen-all-ribbon {
  margin-top 0.5em
  background-color #ececec
  padding 0.3em 0.5em
  margin-left -1.25rem //bulma box
  color black
  border-radius 0 6px 6px 0
  text-align center

  &.eng {
    background-color: #f9f9f9
  }
}

.last-queried-at {
  font-size 0.9em
  margin-bottom 0.5em

}

.is-my-active {
  background-color #fafafa !important
}

.series-list-title {
  margin-left 1em
  font-size 1.6em
  font-weight 200
}

.series-count {
  font-weight 100
  margin 1em
  text-align end
}

.go-to-top-button {
  border-radius 2000000px
  position fixed
  bottom 1em
  right 1em
}